<Window x:Class="RDOP.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RDOP"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="ResultWindow"
        Height="450"
        Width="400"
        MinWidth="400"
        MaxWidth="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
	
	<Window.Resources>
		<Style TargetType="Grid">
			<Setter Property="Background" Value="#202020" />
		</Style>
		
		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="White" />
		</Style>

		<Style TargetType="Button">
			<Setter Property="Background" Value="#2BAA73" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="FontSize" Value="16"/>
		</Style>
	</Window.Resources>
	
	<Grid>
		<StackPanel>
			<TextBlock TextWrapping="Wrap" x:Name="MainTextBlock" Margin="10,10,10,0" FontSize="16"></TextBlock>
			<Button Click="OkButtonClicked" Margin="0,10,10,10" Width="50" HorizontalAlignment="Right">Ok</Button>
		</StackPanel>
	</Grid>
</Window>
